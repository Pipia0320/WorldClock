<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/button_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="500px">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/sydney" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="164dp"
                    android:layout_height="81dp"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="20px"
                    android:text="Sydney"
                    android:textColor="#FFFFFF"
                    android:textSize="36sp"
                    android:textStyle="bold" />

                <TextClock
                    android:id="@+id/clock1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:format12Hour="hh:mm:ss a       dd/MM/yyyy"
                    android:gravity="bottom"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:timeZone="Australia/Sydney" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="500px">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/newyork" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="164dp"
                    android:layout_height="81dp"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="20px"
                    android:text="New York"
                    android:textColor="#FFFFFF"
                    android:textSize="36sp"
                    android:textStyle="bold" />

                <TextClock
                    android:id="@+id/clock2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:format12Hour="hh:mm:ss a       dd/MM/yyyy"
                    android:gravity="bottom"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:timeZone="America/New_York" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="500px">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/tokyo" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="164dp"
                    android:layout_height="81dp"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="20px"
                    android:text="Tokyo"
                    android:textColor="#FFFFFF"
                    android:textSize="36sp"
                    android:textStyle="bold" />

                <TextClock
                    android:id="@+id/clock3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:format12Hour="hh:mm:ss a       dd/MM/yyyy"
                    android:gravity="bottom"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:timeZone="Asia/Tokyo" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="500px">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/shanghai" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="164dp"
                    android:layout_height="81dp"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="20px"
                    android:text="Shanghai"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextClock
                    android:id="@+id/clock4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:format12Hour="hh:mm:ss a       dd/MM/yyyy"
                    android:gravity="bottom"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:timeZone="Asia/Shanghai" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="500px">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/london" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="164dp"
                    android:layout_height="81dp"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="20px"
                    android:text="London"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextClock
                    android:id="@+id/clock5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:format12Hour="hh:mm:ss a       dd/MM/yyyy"
                    android:gravity="bottom"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:timeZone="Europe/London" />
            </FrameLayout>


        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/button_12"
        android:layout_width="205dp"
        android:layout_height="65dp"
        android:background="#8BC34A"
        android:text="12HR"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_24"
        android:layout_width="205dp"
        android:layout_height="66dp"
        android:background="#FF9633"
        android:text="24HR"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>